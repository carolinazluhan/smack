<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:background="@color/colorPrimary"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:orientation="vertical"
        android:gravity="bottom" android:id="@+id/linearLayout">

    <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            app:srcCompat="@drawable/profiledefault"
            android:contentDescription="@string/nav_header_desc"
            android:id="@+id/userImageNavHeader" tools:layout_conversion_absoluteHeight="57dp"
            tools:layout_conversion_absoluteWidth="49dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" tools:layout_conversion_absoluteHeight="27dp"
            tools:layout_conversion_absoluteWidth="352dp" tools:text="Carolina" android:id="@+id/userNameNavHeader"
            app:layout_constraintStart_toEndOf="@+id/userImageNavHeader" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/userImageNavHeader"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" android:text="Carolina" android:layout_marginTop="4dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userEmailNavHeader" tools:layout_conversion_absoluteHeight="19dp"
            tools:layout_conversion_absoluteWidth="180dp"
            app:layout_constraintTop_toBottomOf="@+id/userNameNavHeader"
            tools:text="carolina@jungledevs.com" app:layout_constraintStart_toEndOf="@+id/userImageNavHeader"
            android:layout_marginStart="8dp" android:textColor="@android:color/background_light"
            android:text="carolina@jungledevs.com"/>
    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/loginButtonNavHeader"
            android:background="@android:color/transparent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/userImageNavHeader"
            app:layout_constraintBottom_toBottomOf="parent" android:textColor="@android:color/background_light"
            android:onClick="loginButtonNavClicked" android:textAlignment="center"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/addchannelbutton"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/addChannelButton"
            android:background="@android:color/transparent" android:scaleType="fitXY" android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="addChannelClicked"/>

</android.support.constraint.ConstraintLayout>
